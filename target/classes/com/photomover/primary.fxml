<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.photomover.PrimaryController" >
    <children>
        <VBox spacing="5.0">
            <Label text="Source Folder:" />
            <TextField fx:id="sourceTextField" />
            <Button text="Browse" onAction="#browseSourceFolder" />
        </VBox>
        
        <VBox spacing="5.0">
            <Label text="Destination Folder:" />
            <TextField fx:id="destinationTextField" />
            <Button text="Browse" onAction="#browseDestinationFolder" />
        </VBox>

         <VBox spacing="5.0">
            <Label text="Path Pattern:" />
            <TextField fx:id="pathpattern" />
            <Label fx:id="pathPatternPreview" />            
            <Button text="Guide" onAction="#guide" />
         </VBox>

         <VBox spacing="5.0">
            <Label text="Rename Pattern:" />
            <TextField fx:id="renamepattern" />
            <Label fx:id="renamePatternPreview" />
            <Button text="Guide" onAction="#guide" />
         </VBox>

         <Button fx:id="startButton" text="Start" onAction="#start" />

    </children>
    <!-- Adjust the padding as needed -->
    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
    </padding>
</VBox>
